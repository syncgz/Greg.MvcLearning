
@using MvcJQuery.Models

@model IEnumerable<Summit> 

@{ 
ViewBag.Title = "List of Summits"; 
} 

@if (false) 
    { 
        <script src="../../Scripts/jquery-1.7.1-vsdoc.js" type="text/javascript"></script> 
